{
  "name": "ati-broadcastapp",
  "version": "1.0.0",
  "description": "Allow AITD trusted partners to broadcast Facebook messages to multiple Facebook groups in their domain.",
  "main": "index.js",
  "scripts": {
    "start-server": "nodemon -w server dist/server.js",
    "start": "npm run start-server",
    "compile": "webpack",
    "compile-server": "babel server --out-dir dist --source-maps",
    "watch": "webpack-dev-server --hot --inline",
    "watch-server": "babel server --out-dir dist --source-maps --watch",
    "dev-all": "npm run watch-server & npm run watch & npm start-server",
    "test": "npm run lint",
    "lint": "eslint --ext js,jsx src server webpack.config.js",
    "postinstall": "ln -sf ../node_modules/bootstrap/dist/ static/bootstrap",
    "prestart": "npm run compile & npm run compile-server",
    "deploy": "gcloud app deploy app.yaml cron.yaml --stop-previous-version"
  },
  "engines": {
    "node": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Data4Democracy/ati-broadcastapp.git"
  },
  "keywords": [
    "indivisible",
    "data4democracy"
  ],
  "author": "Data4Democracy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Data4Democracy/ati-broadcastapp/issues"
  },
  "homepage": "https://github.com/Data4Democracy/ati-broadcastapp#readme",
  "dependencies": {
    "@google-cloud/debug-agent": "^2.1.3",
    "ajv": "^5.2.3",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.2",
    "bootstrap": "^3.3.7",
    "connect-mongo": "^2.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "google-auth-library": "^0.11.0",
    "googleapis": "^22.2.0",
    "moment": "^2.19.1",
    "mongoose": "^4.12.1",
    "mz": "^2.7.0",
    "nconf": "^0.8.5",
    "nodemon": "^1.12.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-bootstrap": "^0.31.3",
    "react-dom": "^16.0.0",
    "react-router-bootstrap": "^0.24.4",
    "react-router-dom": "^4.2.2",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "source-map-support": "^0.5.0",
    "webpack": "^3.7.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-register": "^6.26.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "webpack-dev-server": "^2.9.1",
    "yargs": "^9.0.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "sourceMaps": true
  }
}
